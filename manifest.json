{
  "manifest_version": 3,
  "name": "Element Detector",
  "version": "1.0",
  "description": "Get multiple selector paths for any element with visual breadcrumbs",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "../popup/popup.html",
    "default_title": "Element Detector"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }],
  "host_permissions": [
    "<all_urls>"
  ]
}